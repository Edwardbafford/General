GET /_cat/indices

PUT /shakespeare
{
  "mappings": {
    "properties": {
    "speaker": {"type": "keyword"},
    "play_name": {"type": "keyword"},
    "line_id": {"type": "integer"},
    "speech_number": {"type": "integer"}
    }
  }
}

# Download Shakespear data json
# Invoke-RestMethod "http://localhost:9200/shakespeare/_bulk?pretty" -Method Post -ContentType 'application/x-ndjson' -InFile "shakespeare.json"

GET /_cat/indices?v

GET /shakespeare/_doc/2

# Match
POST shakespeare/_search
{
    "query": {
        "match" : {
            "text_entry" : {
                "query": "King Hamlet"
            }
        }
    }
}

# Term
GET /_search
{
    "query": {
        "term": {
            "play_name": {
                "value": "Henry VI Part 2",
                "boost": 1.0
            }
        }
    }
}

# Range
GET /_search
{
    "query": {
        "range" : {
            "line_id": {
                "gte" : 10,
                "lte" : 20,
                "boost" : 2.0
            }
        }
    }
}

# Exists
GET /_search
{
    "query": {
        "exists": {
            "field": "line_number"
        }
    }
}

# BOOL
POST _search
{
  "query": {
    "bool" : {
      "must" : {
        "term" : { "play_name" : "Hamlet" }
      },
      "must_not" : {
        "range" : {
          "line_id" : { "gte" : 36250, "lte" : 34750 }
        }
      },
      "should" : [
        { "term" : { "text_entry" : "king" } },
        { "term" : { "text_entry" : "hamlet" } }
      ],
      "minimum_should_match" : 1,
      "boost" : 1.0
    }
  }
}





















